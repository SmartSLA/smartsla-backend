{
  "webserver": {
    "enabled": true,
    "ip": "127.0.0.1",
    "ipv6": "::1",
    "port": 8081,
    "virtualhosts": [],
    "startupBufferTimeout": 500
  },
  "wsserver": {
    "enabled": true,
    "port": 8080
  },
  "log": {
