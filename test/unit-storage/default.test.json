    "console": {
      "enabled": false,
      "level": "debug",
      "handleExceptions": false,
      "json": false,
      "prettyPrint": true,
      "colorize": true
    }
  },
  "auth": {
    "strategies": ["local"]
  },
  "core": {
    "config": {
      "db": "./tmp/db.json"
    }
  },
  "for-the-test": "This key is only set in the test configuration file"
