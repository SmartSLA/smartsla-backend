sub-header
  ticketing-organization-detail-subheader(
    is-edit-mode="$ctrl.isEditMode",
    on-cancel-btn-click="$ctrl.onCancelBtnClick()",
    on-edit-btn-click="$ctrl.onEditBtnClick()",
    on-save-btn-click="$ctrl.onSaveBtnClick()",
    form="form",
    selected-tab="$ctrl.selectedTab",
    organization="$ctrl.organization"
  )

.card
  ticketing-organization-tabs(
    selected-tab = "$ctrl.selectedTab",
    is-entity-mode = "!!$ctrl.organization.parent"
  )
form(name="form")
  ticketing-organization-tabs-main(
    ng-if="$ctrl.organization",
    ng-show='$ctrl.selectedTab === "main"',
    organization = "$ctrl.organization",
    is-edit-mode="$ctrl.isEditMode"
  )
ticketing-organization-tabs-contract(
  ng-show='$ctrl.selectedTab === "contract"',
  organization="$ctrl.organization",
  on-create-btn-click="$ctrl.onCreateContractBtnClick()"
)
ticketing-organization-tabs-entity(
  parent="$ctrl.organizationId",
  ng-show='$ctrl.selectedTab === "entity"'
)
ticketing-organization-tabs-user(
  users="$ctrl.organization.users",
  ng-show='$ctrl.selectedTab === "user"'
)
