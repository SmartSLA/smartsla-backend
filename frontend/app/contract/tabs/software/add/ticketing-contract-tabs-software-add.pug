.modal
  form(name="form")
    .modal-dialog
      .modal-content
        .modal-header.hidden-xs
          button.close(type="button", data-dismiss="modal", aria-label="Close", ng-click="$hide()")
            span(aria-hidden="true") &times;
          h4.modal-title #{__('Add software')}
        .modal-header.flex-vertical-centered.hidden-md
          .flex-grow.flex.flex-vertical-centered.flex-space-between
            button.btn.btn-link(type="button", data-dismiss="modal", aria-label="Close", ng-click="$hide()")
              span(aria-hidden="true") &times;
            h4.modal-title #{__('Add software')}
          .flex-grow.flex-end
            button.btn.btn-link(ng-click="$ctrl.onAddBtnClick(form); $hide()", ng-disabled="form.$invalid")
              | #{__('Add')}
        .body.p-20
          ticketing-contract-tabs-software-form(
            software="$ctrl.newSoftware",
            existing-software-ids="$ctrl.existingSoftwareIds",
            available-software-types="$ctrl.availableSoftwareTypes"
          )
        .modal-footer.flex.hidden-xs
          .flex-vertical-centered.flex-end
            button.btn.btn-link(type="button", ng-click="$hide()")
              | #{__('Cancel')}
            button.btn.btn-primary(ng-click="$ctrl.onAddBtnClick(form); $hide();", ng-disabled="form.$invalid || form.$pending")
              | #{__('Add')}
