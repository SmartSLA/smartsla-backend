.card
  .card-body
    infinite-list(load-more-elements='$ctrl.loadMoreElements()', scroll-inside-container="$ctrl.scrollInsideContainer")
      .listview.lv-bordered.lv-lg(ng-if="$ctrl.elements.length > 0")
        .lv-header
          .lv-item.p-0
            .row
              .col-md-1.col-xs-1.lv-title
                span #
              .col-md-1.hidden-xs.lv-title
                span #{__('Type')}
              .col-md-2.col-xs-2.lv-title
                span #{__('Time')}
              .col-md-1.col-xs-2.lv-title
                span #{__('Status')}
              .col-md-1.hidden-xs.lv-title
                span #{__('Responsible')}
              .col-md-1.col-xs-2.lv-title
                span #{__('Organization')}
              .col-md-2.col-xs-2.lv-title
                span #{__('Software')}
              .col-md-2.col-xs-3.lv-title
                span #{__('Title')}
              .col-md-1.hidden-xs.lv-title
                span #{__('Last update')}
        .lv-body
          .lv-item.p-0(ng-repeat="item in $ctrl.elements track by item._id")
            ticketing-ticket-list-item.clickable(ticket="item", ui-sref="ticketing.tickets.detail({ ticketId: item._id })")
div(ng-if="!$ctrl.elements.length && $ctrl.infiniteScrollCompleted")
  ticketing-empty-message(
    icon="mdi-check",
    message=__('No issue'))
ul.nav.nav-pills.nav-stacked(ng-if='$ctrl.infiniteScrollDisabled')
  li.text-center(openpaas-logo-spinner, spinner-start-active='1', spinner-size='0.5')
fab(ng-if="$ctrl.state==='open'", icon="plus", ng-click="$ctrl.onCreateBtnClick()")
